{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./assets/types"
    ]
  },
  "include": [
    "assets/**/*"
  ]
}